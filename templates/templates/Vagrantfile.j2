Vagrant.configure("2") do |config|
  config.vm.box_check_update = false

  config.vm.define "{{ hostname }}" do |node|
    node.vm.box = "{{ image }}"
    node.vm.network "private_network", ip: "{{ ip }}"
    node.vm.network "forwarded_port", guest:80, host:8080, host_ip:"127.0.0.1"
  end
end
