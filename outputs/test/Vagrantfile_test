# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box_check_update = false
  
  config.vm.define "VM1" do |node|
    node.vm.box = "bento/ubuntu-16.04"
    node.vm.network "private_network", ip: "172.16.1.106", name: "vboxnet0"
    node.vm.network "forwarded_port", guest: 22, host: 2202
    node.vm.network "forwarded_port", guest: 80, host: 8080
    node.vm.provider :virtualbox do |vb|
      vb.customize ["modifyvm", :id, "--vrde","on"]
	  vb.customize ["modifyvm", :id, "--vrdeport","12345"]
      vb.customize ["modifyvm", :id, "--vrdeaddress","0.0.0.0"]
    end
  end
  
  config.vm.define "VM2" do |node|
    node.vm.box = "bento/ubuntu-16.04"
    node.vm.network "private_network", ip: "172.16.1.107", name: "vboxnet0"
    node.vm.network "forwarded_port", guest: 22, host: 2203
    node.vm.provider :virtualbox do |vb|
      vb.customize ["modifyvm", :id, "--vrde","on"]
	  vb.customize ["modifyvm", :id, "--vrdeport","12346"]
      vb.customize ["modifyvm", :id, "--vrdeaddress","0.0.0.0"]
    end
  end
  
end