set ns [new Simulator]

source tb_compat.tcl

# Add nodes
set n1 [$ns node]
tb-fix-node $n1 pc1a

# Set Node OS from saved image, Ubuntu1604-64-STD by default
tb-set-node-os $n1 Ubuntu1604-64-STD

# Set Node Lans
set lanstr ""
append lanstr "$n1 "
# Change the BW and delay if you want, 10Gb, 0ms respectively by default
set lan1 [$ns make-lan "$lanstr" 10Gb 0ms]


# Set Node IP
tb-set-ip-lan $n1 $lan1 172.16.10.100

# Set route and adjust configure.
$ns rtproto Static

# Go!
$ns run